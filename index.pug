- var products = [{ id: 1, image: 'product01.png', category: 'Category', name: 'Product 1', price: 980.00, sale: '-30%', isNew: true },{ id: 2, image: 'product02.png', category: 'Category', name: 'Product 2', price: 980.00, isNew: true },{ id: 3, image: 'product03.png', category: 'Category', name: 'Product 3', price: 980.00, sale: '-30%' },{ id: 4, image: 'product04.png', category: 'Category', name: 'Product 4', price: 980.00 },{ id: 5, image: 'product05.png', category: 'Category', name: 'Product 5', price: 980.00 }]

#newItemsSection.section
    .container
        .row
            .col-md-12
                .section-title
                    h3.title New Products

            .col-md-12
                .row
                    .products-tabs
                        #tab1.tab-pane.active
                            .products-slick(data-nav="#slick-nav-1")
                                each product in products
                                    .product
                                        a(href=`product.html?id=${product.id}`)
                                            .product-img
                                                img(src=`./img/${product.image}` alt=product.name)
                                                .product-label
                                                    if product.sale
                                                        span.sale #{product.sale}
                                                    if product.isNew
                                                        span.new NEW
                                            .product-body
                                                p.product-category #{product.category}
                                                h3.product-name
                                                    a(href=`#`) #{product.name}
                                                h4.product-price $#{product.price.toFixed(2)}


